<VBox prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.EditarMotorista">
   <children>
      <MenuBar VBox.vgrow="NEVER">
         <menus>
            <Menu mnemonicParsing="false" text="Menu">
               <items>
                  <MenuItem mnemonicParsing="false" text="Menu" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <Label layoutX="234.0" layoutY="14.0" text="Editar Motorista">
               <font>
                  <Font name="Times New Roman" size="30.0" />
               </font>
            </Label>
            <Label layoutX="190.0" layoutY="188.0" text="Nome:">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </Label>
            <Label layoutX="118.0" layoutY="226.0" prefHeight="23.0" prefWidth="176.0" text="Novo endereço:">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </Label>
            <Label layoutX="195.0" layoutY="265.0" prefHeight="23.0" prefWidth="132.0" text="CNH:">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </Label>
            <Button layoutX="257.0" layoutY="402.0" mnemonicParsing="false" onAction="#voltarAoMenu" text="Cancelar">
               <font>
                  <Font name="Times New Roman" size="15.0" />
               </font>
            </Button>
            <Button layoutX="346.0" layoutY="402.0" mnemonicParsing="false" onAction="#editarMotorista" prefHeight="26.0" prefWidth="62.0" text="Salvar">
