               <font>
                  <Font name="Times New Roman" size="15.0" />
               </font>
            </Label>
            <ComboBox fx:id="comboMotoristas" layoutX="258.0" layoutY="131.0" prefWidth="150.0" />
            <Label layoutX="194.0" layoutY="332.0" prefHeight="23.0" prefWidth="92.0" text="Setor:">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="campoSetor" layoutX="259.0" layoutY="331.0" />
